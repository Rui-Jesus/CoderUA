<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkillsPage">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skills_menu"
        android:textAlignment="center"
        android:textSize="64sp"
        android:textStyle="bold"
        android:layout_marginTop="128dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spawn_string"
                    android:textSize="48sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spawnInfo"
                        android:textSize="24sp"/>

                    <ProgressBar
                        android:id="@+id/proximityBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="510dp"
                        android:layout_height="64dp"
                        android:max="100"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <Button
                        android:id="@+id/prox"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/plus"
                        android:onClick="proximity"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points_string"
                    android:textSize="48sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/pointsInfo"
                        android:textSize="24sp"/>

                    <ProgressBar
                        android:id="@+id/pointsBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="510dp"
                        android:layout_height="64dp"
                        android:max="5"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <Button
                        android:id="@+id/pts"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/plus"
                        android:onClick="points"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_string"
                    android:textSize="48sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rareInfo"
                        android:textSize="24sp"/>

                    <ProgressBar
                        android:id="@+id/spawnBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="510dp"
                        android:layout_height="64dp"
                        android:max="20"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <Button
                        android:id="@+id/spwn"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/plus"
                        android:onClick="spawn"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/range_string"
                    android:textSize="48sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rangeInfo"
                        android:textSize="24sp"/>

                    <ProgressBar
                        android:id="@+id/rangeBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="510dp"
                        android:layout_height="64dp"
                        android:max="10"/>

                    <Button
                        android:id="@+id/rng"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/plus"
                        android:onClick="range"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/stringpts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pts"
            android:textSize="48sp"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:textSize="24dp"
            android:text="@string/save"
            android:onClick="saveData"/>
    </LinearLayout>

    <include layout="@layout/bottombar"/>

    <include layout="@layout/topbar"/>


</RelativeLayout>

