<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkillsPage">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="42dp"
        android:text="@string/skills_menu"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <include layout="@layout/bottombar"/>

    <include layout="@layout/topbar"
        android:id="@+id/include3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:orientation="vertical"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="128dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spawn_string"
            android:textSize="10dp" />

        <ProgressBar
            android:id="@+id/proximityBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center" />

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/spawnInfo"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/prox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/plus"
            android:onClick="proximity"
            android:layout_gravity="center"/>/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.516"
        app:layout_constraintLeft_toRightOf="@+id/layout1"
        android:layout_marginLeft="32dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/points_string"
            android:layout_gravity="center"
            android:textSize="10dp" />

        <ProgressBar
            android:id="@+id/pointsBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center" />

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/pointsInfo"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/pts"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/plus"
            android:layout_gravity="center"
            android:onClick="points"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/include3"
        android:layout_marginBottom="128dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout3"
        android:layout_marginRight="64dp"
        app:layout_constraintVertical_bias="0.516"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_string"
            android:textSize="10dp"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/spawnBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center" />

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rareInfo"
            android:layout_gravity="center"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/spwn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/plus"
            android:onClick="spawn"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="128dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/range_string"
            android:textSize="10dp"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/rangeBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/rangeInfo"
            android:textSize="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/rng"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/plus"
            android:onClick="range"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintBottom_toBottomOf="@+id/include3"
        android:layout_marginBottom="36dp">

        <TextView
            android:id="@+id/stringpts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pts"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveData"
            android:text="@string/save"
            android:layout_gravity="center"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

